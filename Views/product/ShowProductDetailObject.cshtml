                                @foreach (var item in ViewBag.ShowColorProduct)
                                {

                                    <li style="list-style:none;" class="li-color li-default-border" value="@item.Id"><a class="li-active" href="/product/ShowProductDetailObject?color_id=@item.Id&product_id=@Model.ProductId"> <img class="img-product-color" style="border-radius:50% ; " src="~/image/product_color/@item.ColorImage" alt=""></a></li>
                                }


                            </div>
                        }
                    </div>
                    <div class="product-content-right-size">
