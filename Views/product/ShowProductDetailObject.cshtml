                                <li tabindex="0" class="size-name  li-border-size" id="size-name-@item.Id" style="cursor: pointer; " value="@item.Id">@item.SizeName</li>
                            }

                        </ul>

                    </div>
                    <div class="product-content-right-quantity row">
