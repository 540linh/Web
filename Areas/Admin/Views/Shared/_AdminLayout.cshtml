<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin ShoesLover</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <!-- fontawesome icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />    <!-- custom stylesheet -->
    <link rel="stylesheet" href="~/css/adminStyle.css" type="text/css">
</head>
<body>
        <div class="body-overlay"></div>

        <!-- sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h3><img src="https://png.pngtree.com/png-vector/20190330/ourmid/pngtree-vector-shoes-icon-png-image_892571.jpg" alt="Brand image" class="img-fluid" /><span>Shoes Picker</span></h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="#" class="dashboard"><i class="fas fa-columns fa-align-center"></i> <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="#" class="dashboard"><i class="fas fa-columns fa-500px"></i> <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="#" class="dashboard"><i class="fas fa-columns"></i> <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="#" class="dashboard"><i class="fas fa-columns"></i> <span>Dashboard</span></a>
                </li>

                <div class="mobile-screen navbar-display">
                    <li class="dropdown d-lg-none d-md-block d-xl-none d-sm-block">
                        <a href="#message-sub-menu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fas fa-bell"></i><span>Thong bao</span>
                        </a>
                        <ul class="collapse list-unstyled menu" id="message-sub-menu">
                            <li>
                                <a href="#">Message 1</a>
                            </li>
                            <li>
                                <a href="#">Message 2</a>
                            </li>
                            <li>
                                <a href="#">Message 3</a>
                            </li>
                            <li>
                                <a href="#">Message 4</a>
                            </li>
                        </ul>
                    </li>
                    <li class="d-lg-none">
                        <a href="#"><i class="fas fa-sign-out-alt"></i><span>Log out</span></a>
                    </li>
                </div>

            @*</div>*@
            </ul>
        </nav>


        <div id="content">
            <!-- top navbar -->
            <div class="top-navbar">
                <nav class="navbar navbar-expand-lg">
                    <div class="container-fluid">
                        <button type="button" id="sidebar-resize" class="d-xl-block d-lg-block d-md-mone d-none">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <a href="#" class="navbar-brand">Dashboard</a>
                        <button class="d-inline-block d-lg-none ml-auto more-button" id="sidebar-collapse" type="button" data-toggle="collapse"
                                data-target="#navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle">
                            <i class="fas fa-bars fa-2x"></i>
                        </button>

                        <div class="collapse navbar-collapse d-flex flex-row-reverse d-lg-block d-xl-block d-sm-none d-md-none d-none" id="navbar-collapse">
                            <ul class="nav navbar-nav ml-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-item nav-link" href="#" data-toggle="dropdown">
                                        <i class="fas fa-bell"></i>
                                        <span class="notification">4</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="#">Message 1</a>
                                        </li>
                                        <li>
                                            <a href="#">Message 2</a>
                                        </li>
                                        <li>
                                            <a href="#">Message 3</a>
                                        </li>
                                        <li>
                                            <a href="#">Message 4</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a href="#" class="nav-link">
                                        <i class="fas fa-user-shield"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="#">Logout</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <!-- main content -->
            <div class="main-content">
                <div class="row">
                    @RenderBody()
                </div>
            </div>

        </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script type="text/javascript">
        $(document).ready(()=>{
            $("#sidebar-resize").on('click', ()=>{
                $("#sidebar").toggleClass('active');
                $("#content").toggleClass('active');
                var button = $("#sidebar-resize i");
                button.toggleClass("fa-chevron-left");
                button.toggleClass("fa-chevron-right");
            });
            $(".more-button,.body-overlay").on("click",()=>{
                $("#sidebar,.body-overlay").toggleClass('show-nav');
            })
        })
    </script>
</body>
</html>


